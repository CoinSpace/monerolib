{
  "name": "monerolib",
  "version": "1.0.0",
  "description": "Monero JavaScript library",
  "author": "Coin Crypto Wallet <support@coin.space> (https://coin.space/)",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "babel ./lib --out-file-extension=.cjs --out-dir=./lib",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint lib/*.js __tests__"
  },
  "dependencies": {
    "bn.js": "^4.12.0",
    "debug": "^4.3.1",
    "elliptic": "^6.5.4",
    "keccak": "^3.0.1",
    "varint": "^6.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/eslint-parser": "^7.13.8",
    "@babel/plugin-syntax-top-level-await": "^7.12.13",
    "@babel/preset-env": "^7.13.8",
    "eslint": "^7.21.0",
    "eslint-config-coinspace": "^1.1.1",
    "jest": "^26.6.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "12"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-top-level-await"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "coinspace"
    ],
    "env": {
      "node": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "*.test.js",
          "__tests__/*"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  }
}
